    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="Ending" />
        
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <ComboBox ItemsSource="{Binding Months, ElementName=Root}"
                      SelectedValue="{Binding SelectedMonth, ElementName=Root}" />

            <ComboBox ItemsSource="{Binding Days, ElementName=Root}"
                      SelectedValue="{Binding SelectedDay, ElementName=Root}" />

            <ComboBox ItemsSource="{Binding Years, ElementName=Root}"
                      SelectedValue="{Binding SelectedYear, ElementName=Root}" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Margin="0,8,0,0">
            <Label Content="Go back" />

            <Slider Value="{Binding YearDuration, ElementName=Root}"
                    Minimum="0"
                    Maximum="5"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    TickPlacement="Both"/>

            <Label Content="years" />

            <Slider Value="{Binding MonthDuration, ElementName=Root}"
                    Minimum="0"
                    Maximum="11"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    TickPlacement="Both"/>

            <Label Content="months" />

            <Slider Value="{Binding DayDuration, ElementName=Root}"
                    Minimum="0"
                    Maximum="30"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    TickPlacement="Both"/>

            <Label Content="days" />
        </StackPanel>
        <!--<DatePicker Grid.Column="1"
                    Grid.Row="1"
                    SelectedDate="{Binding SelectedEndDate, Mode=TwoWay, ElementName=Root}"
                    DisplayDateStart="{Binding SelectedStartDate, ElementName=Root}"
                    DisplayDateEnd="{Binding EndAbsoluteTime, Mode=OneWay, ElementName=Root}"
                    Margin="0,6,0,0" />-->

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,8,0,0">
            <Label Content="{Binding SelectedStartDate, ElementName=Root}" />

            <Label Content="{Binding ReportingDuration, Mode=OneWay, ElementName=Root}" />
        </StackPanel>
    </Grid>
</UserControl>

